root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[{*.xml,*.yml}]
indent_style = space
indent_size = 2
tab_width = 2

[*.ebuild]
indent_style = tab
indent_size = 4
tab_width = 4

[.gitmodules]
indent_style = tab
